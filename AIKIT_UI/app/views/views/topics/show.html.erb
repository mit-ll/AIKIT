<p style="color: green"><%= notice %></p>

<%= render @topic %>

<div>
  <%= link_to "Back to topics", topics_path %>

  <% if session[:role] == "admin" -%>
    <%= link_to "Edit this topic", edit_topic_path(@topic) %>
    <%= button_to "Destroy this topic", @topic, method: :delete %>
  <% end -%>
</div>
